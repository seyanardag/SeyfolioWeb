@model Contact

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">İletişim Bilgileri </h4>


            <dl class="w-100">

                <div class="row w-100">
                    <dt class="col-2">Başlık</dt>
                    <dd class="col-10">@Model.Title</dd>
                </div>

                <div class="row w-100">
                    <dt class="col-2">Açıklama</dt>
                    <dd class="col-10">@Model.Description</dd>
                </div>
                
                <div class="row w-100">
                    <dt class="col-2">Mail</dt>
                    <dd class="col-10">@Model.Mail</dd>
                </div>

                <div class="row w-100">
                    <dt class="col-2">Telefon</dt>
                    <dd class="col-10">@Model.Phone</dd>
                </div>               

            </dl>

        </div>
    </div>
</div>

<a href="/ContactInfo/UpdateContactInfo/" class="btn btn-primary ml-3">GÜNCELLE</a>



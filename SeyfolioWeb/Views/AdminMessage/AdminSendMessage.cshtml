@model WriterMessage
@{
    ViewData["Title"] = "AdminSendMessage";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="mx-4 ">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Yeni Mesaj Gönder</h4>

                <form class="forms-sample" action="/AdminMessage/AdminSendMessage/" method="post">


                    <div class="form-group">
                        <label>Alıcı e-posta</label>
                        <input class="form-control" asp-for="Receiver" />
                        <span asp-validation-for="Receiver" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label>Konu</label>
                        <input class="form-control" asp-for="Subject" />
                        <span asp-validation-for="Subject" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label>Mesaj içeriği</label>
                        <textarea class="form-control" asp-for="Content" rows="5" ></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>

                    </div>

                    <button class="btn btn-success mt-3" type="submit">Gönder</button>
                </form>
            </div>
        </div>
    </div>
</div>



@model List<WriterMessage>

@{
    ViewData["Title"] = "Gelen Mesajlar";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Gelen Mesajlar</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen Ad</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@message.WriterMessageId</td>
                                <td>@message.SenderName</td>
                                <td>@message.Subject</td>
                                <td>@message.Date.ToString("dd  MMMM  yyyy - hh:mm")</td>


                                <td> <a asp-controller="AdminMessage" asp-action="DeleteMessage" asp-route-ID="@message.WriterMessageId" class="btn btn-outline-danger"> SİL  </a>  </td>
                                <td> <a asp-controller="AdminMessage" asp-action="MessageDetail" asp-route-ID="@message.WriterMessageId" class="btn btn-outline-info"> Mesajı Gör  </a>  </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


@model Message

@{
    ViewData["Title"] = "Mesaj Detyları";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Mesaj Detayları </h4>


            <dl class="w-100">
                <div class="row w-100">
                    <dt class="col-2">Mesaj ID</dt>
                    <dd class="col-10">@Model.MessageId</dd>
                </div>

                <div class="row w-100">
                    <dt class="col-2">Gönderen Ad</dt>
                    <dd class="col-10">@Model.Name</dd>
                </div>

                <div class="row w-100">
                    <dt class="col-2">Gönderen Mail</dt>
                    <dd class="col-10">@Model.Mail</dd>
                </div>

                <div class="row w-100">
                    <dt class="col-2">Gönderilme Tarihi</dt>
                    <dd class="col-10">@Model.Date</dd>
                </div>

                <div class="row w-100">
                    <dt class="col-2">Mesaj İçeriği</dt>
                    <dd class="col-10">@Model.Content</dd>
                </div>
            </dl>

        </div>
    </div>
</div>

<a href="/ContactMessage/Index" class="btn btn-primary ml-3">GERİ</a>


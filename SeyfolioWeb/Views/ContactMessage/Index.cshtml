@model List<Message>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesajlar Tablosu</h4>



            <div class="table-responsive">
                <table class="table align-items-center ">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Gönderen</th>
                            <th>Mail</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Gör</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {

                            <tr>
                                
                                <td>
                                    @message.MessageId
                                </td>
                                <td>
                                    @message.Name
                                </td>
                                <td>
                                    @message.Mail
                                </td>
                                <td>
                                    @message.Date
                                </td>                                
                                <td>
                                    <a href="/ContactMessage/DeleteMessage/@message.MessageId" class="btn btn-danger">SİL</a>
                                </td>
                                <td>
                                    <a href="/ContactMessage/Detail/@message.MessageId" class="btn btn-primary">Mesajı Gör</a>
                                </td>

                                
                            </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>

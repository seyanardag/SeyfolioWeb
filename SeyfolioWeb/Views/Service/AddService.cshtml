@model Service
@{
    ViewData["Title"] = "AddService";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}



<div class="mx-4 ">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Yeni Servis Ekle </h4>

                <form class="forms-sample" action="/Service/AddService" method="post">


                    <div class="form-group">
                        <label>Başlık</label>
                        <input class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>

                    </div>
                    <div class="form-group">
                        <label>Resim</label>
                        <input class="form-control" asp-for="ImageUrl" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>

                    </div>


                    <button class="btn btn-success mt-3" type="submit">EKLE</button>
                </form>
            </div>
        </div>
    </div>
</div>


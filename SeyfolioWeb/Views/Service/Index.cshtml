@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title"> Hizmetler Tablosu </h4>
          
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Adı</th>
                            <th>Resim</th>
                            <th>SİL</th>
                            <th>GÜNCELLE</th>
                        </tr>
                    </thead>
                    <tbody>
                            
                        @foreach(var service in Model) {

                        <tr>
                                <td>@service.ServiceId</td>
                                <td>@service.Title</td>
                                <td>@service.ImageUrl</td>
                                <td> <a href="/Service/DeleteService/@service.ServiceId" class="btn btn-danger">SİL</a> </td>
                                <td> <a href="/Service/UpdateService/@service.ServiceId" class="btn btn-primary">GÜNCELLE</a> </td>

                        </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Service/AddService" class="btn btn-success ml-3"> YENİ SERVİS EKLE </a>

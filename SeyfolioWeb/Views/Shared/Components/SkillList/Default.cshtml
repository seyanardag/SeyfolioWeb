
@model List<Skill>

<div class="section px-3 px-lg-4 pt-5" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Yeteneklerim</h2>
        </div>
        <div class="text-center">
            <p class="mx-auto mb-3" style="max-width:600px">Hızlı öğrenen, kodlamayı çok seven birisiyim. Aşağıda yer alan yetenklerimle sizlere profesyonel yazılım hizmetleri sunabilirim.</p>
        </div>
        <div class="bg-light p-3">
            <div class="row">
                <div class="row d-flex justify-content-between">
                    @foreach (var skill in Model)
                    {
                        <div class="py-2 col-md-5">
                            <div class="d-flex text-small fw-bolder"><span class="me-auto">@skill.Title</span><span>@skill.Value %</span></div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: @skill.Value%" aria-valuenow="@skill.Value" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                    }
                   
                   
            </div>
        </div>
    </div>
</div>
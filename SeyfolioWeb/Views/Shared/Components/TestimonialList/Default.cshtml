
@model List<Testimonial>

<div class="section px-3 px-lg-4 pt-5" id="testimonials">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">Referanslarım</h2>
        </div>
        <div class="row">

            @foreach (var testimonial in Model)
            {
                <div class="col-md-6 mb-5" data-aos="fade-right" data-aos-delay="100">
                    <div class="d-flex ms-md-3"><span><i class="fas fa-2x fa-quote-left"></i></span><span class="m-2">@testimonial.Comment</span></div>
                    <div class="d-flex justify-content-end align-items-end">
                        <div class="text-end me-2">
                            <div class="fw-bolder">@testimonial.ClientlName</div>
                            <div class="text-small">@testimonial.Company</div>
                        </div><img class="me-md-3 rounded" src="@testimonial.ImageUrl" width="96" height="96" alt="@testimonial.ClientlName" />
                    </div>
                </div>

            }

        </div>
    </div>
</div>
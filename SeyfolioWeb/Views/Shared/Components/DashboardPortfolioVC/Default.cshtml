</div>


<div class="row ">
    <div class="col-12 grid-margin">
@* <div class="col-lg-12 grid-margin stretch-card"> *@
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Projeler Tablosu</h4>

            <div class="table-responsive">
                <table class="table align-items-center ">
                    <thead>
                        <tr>
                            <th>Proje Adı</th>
                            <th>Categori</th>
                            <th>Proje Linki</th>
                            <th>Ücret</th>
                            <th>Durum</th>
                            <th>Tamamlanma </th>
                        
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var portfolio in Model)
                        {

                            <tr>
                                <th scope="row">
                                    <div class="media align-items-center">
                                        <a href="#" class=" mr-3">
                                            <img alt="Image placeholder" style="object-fit: cover" class="rounded-circle" width="48" height="48" src="@portfolio.SmallImageUrl">
                                        </a>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@portfolio.ProjectName</span>
                                        </div>
                                    </div>
                                </th>
                                <td>
                                    @portfolio.Category
                                </td>
                                <td>
                                    @portfolio.ProjectUrl
                                </td>
                                <td>
                                    @portfolio.Price
                                </td>
                                <td>
                                    <span class="badge badge-dot mr-4">
                                        @if (portfolio.Status)
                                        {
                                            @* <i class="bg-success"></i> *@
                                            <span class="badge badge-outline-success">Aktif</span>
                                        }
                                        else
                                        {
                                            @* <i class="bg-warning"></i> *@
                                            <span class="badge badge-outline-danger">Pasif</span>
                                        }
                                    </span>
                                </td>
                                <td>
                                    <div class="d-flexa align-items-centera">
                                        <div class="completion mr-2 mb-1">@portfolio.CompletionValue%</div>
                                        @if(portfolio.CompletionValue<35)
                                        {
                                            <div class="progress progress-md portfolio-progress">
                                                <div class="progress-bar bg-danger" role="progressbar" style="width: @portfolio.CompletionValue%" aria-valuenow="@portfolio.CompletionValue" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        else if (portfolio.CompletionValue < 70)
                                        {
                                            <div class="progress progress-md portfolio-progress">
                                                <div class="progress-bar bg-warning" role="progressbar" style="width: @portfolio.CompletionValue%" aria-valuenow="@portfolio.CompletionValue" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                        else if (portfolio.CompletionValue <= 99)
                                        {
                                            <div class="progress progress-md portfolio-progress">
                                                <div class="progress-bar bg-primary" role="progressbar" style="width: @portfolio.CompletionValue%" aria-valuenow="@portfolio.CompletionValue" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }else
                                        {
                                            <div class="progress progress-md portfolio-progress">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: @portfolio.CompletionValue%" aria-valuenow="@portfolio.CompletionValue" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        }
                                       
                                    </div>
                                </td>                                
                            </tr>
                        }

                    </tbody>
                </table>
                
            </div>

        </div>
    </div>        
    </div>
    </div>
@* </div> *@







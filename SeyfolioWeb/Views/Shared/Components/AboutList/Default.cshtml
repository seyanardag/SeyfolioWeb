@model List<About>

<div class="section pt-4 px-3 px-lg-4" id="about">
    <div class="container-narrow">

        @foreach (var about in Model)
        {
            <div class="row">
                <div class="col-md-6">
                    <h2 class="h4 my-2">@about.Title </h2>
                    <p>@about.Description</p>
                    <div class="row mt-3">
                        @if (about.Age>=0)
                        {
                            <div class="col-sm-2">
                                <div class="pb-1">Yaş:</div>
                            </div>
                            <div class="col-sm-10">
                                <div class="pb-1 fw-bolder">@about.Age</div>
                            </div>
                        }
                        
                     
                        <div class="col-sm-2">
                            <div class="pb-1">Email:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@about.Mail</div>
                        </div>
                       
                        <div class="col-sm-2">
                            <div class="pb-1">Tel No:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@about.Phone</div>
                        </div>
                        <div class="col-sm-2">
                            <div class="pb-1">Adres:</div>
                        </div>
                        <div class="col-sm-10">
                            <div class="pb-1 fw-bolder">@about.Adress</div>
                        </div>
                       
                    </div>
                </div>
                <div class="col-md-5 offset-md-1" data-aos="fade-left" data-aos-delay="100"><img class="avatar img-fluid mt-2"
                         src="~/Template/images/@(String.IsNullOrEmpty(about.ImageUrl) ? "noPic.jpg" : about.ImageUrl)"
                         width="400" height="400" alt="Foto" /></div>
            </div>


        }

    </div>
</div>
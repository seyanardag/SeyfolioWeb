@model Skill

@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="mx-4 " >

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Yeni Yetenek Ekle </h4>

                <form class="forms-sample" action="/Skill/AddSkill" method="post">


                    <div class="form-group">
                        <label>Başlık</label>
                        <input class="form-control" asp-for="Title" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                       
                    </div>
                    <div class="form-group">
                        <label>Oran</label>
                        <input class="form-control" asp-for="Value" />
                        <span asp-validation-for="Value" class="text-danger"></span>
                       
                    </div>

                    <button class="btn btn-success mt-3" type="submit">EKLE</button>
                </form>
            </div>
        </div>
    </div>
</div>


@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
<div class="card">
    <div class="card-body">
        <h4 class="card-title">Projeler Tablosu</h4>
      


            <div class="table-responsive">
                <table class="table align-items-center ">
                    <thead>
                        <tr>
                            <th>Proje Adı</th>                          
                            <th>Categori</th>                          
                            <th>Proje Linki</th>                          
                            <th>ÜCRET</th>
                            <th>Durum</th>                            
                            <th >TAMAMLANMA </th>    
                            <th>SİL</th>    
                            <th>GÜNCELLE</th>
                        </tr>
                    </thead>
                    <tbody >
                        @foreach (var portfolio in Model)
                        {
                            
                            <tr>
                            <th scope="row">
                                <div class="media align-items-center">
                                    <a href="#" class=" mr-3">
                                            <img alt="Image placeholder" style="object-fit: cover" class="rounded-circle" width="48" height="48" src="@portfolio.SmallImageUrl">
                                    </a>
                                    <div class="media-body">
                                        <span class="name mb-0 text-sm">@portfolio.ProjectName</span>
                                    </div>
                                </div>
                            </th>
                            <td >
                                @portfolio.Category
                            </td>
                            <td >
                                @portfolio.ProjectUrl
                            </td>
                            <td >
                                @portfolio.Price
                            </td>
                            <td>
                                <span class="badge badge-dot mr-4">
                                    @if (portfolio.Status)
                                        {
                                            @* <i class="bg-success"></i> *@
                                            <span class="badge badge-outline-success">Aktif</span>
                                        } else
                                        {
                                            @* <i class="bg-warning"></i> *@
                                            <span class="badge badge-outline-danger">Pasif</span>
                                        }                                    
                                </span>
                            </td>                           
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="completion mr-2">@portfolio.CompletionValue%</span>
                                    <div>
                                        <div class="progress">
                                       <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@portfolio.CompletionValue" aria-valuemin="0" aria-valuemax="100" style="width: @portfolio.CompletionValue%;"></div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td><a href="/Portfolio/DeletePortfolio/@portfolio.PortfolioId" class="btn btn-danger">SİL</a></td>
                                <td><a href="/Portfolio/UpdatePortfolio/@portfolio.PortfolioId" class="btn btn-primary">GÜNCELLE</a></td>
                        </tr>
                        }        

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
            <a href="/Portfolio/AddPortfolio" class="btn btn-success ml-3" style="width:fit-content"> YENİ PROJE EKLE </a>
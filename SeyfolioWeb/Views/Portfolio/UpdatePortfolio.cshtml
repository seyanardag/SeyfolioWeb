@model Portfolio
@{
    ViewData["Title"] = "UpdatePortfolio";
    Layout = "~/Views/Shared/_DarkAdminLayout.cshtml";
}


<div class="mx-4 " style="min-height:50vh">

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"> Proje Güncelle </h4>

                <form class="forms-sample" action="/Portfolio/UpdatePortfolio" method="post">
                     <input type="hidden" name="PortfolioId" value="@Model.PortfolioId" />

                    <div class="form-group">
                        <label>Proje Adı</label>
                        <input class="form-control" asp-for="ProjectName" />
                        <span asp-validation-for="ProjectName"></span>
                        @Html.ValidationMessageFor(x => x.ProjectName, null, new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Kategori</label>
                        <input class="form-control" asp-for="Category" />
                    </div>
                    <div class="form-group">
                        <label>Resim</label>
                        <input class="form-control" asp-for="ImageUrl  " />
                    </div>
                    <div class="form-group">
                        <label>Proje Linki</label>
                        <input class="form-control" asp-for="ProjectUrl" />
                    </div>
                    <div class="form-group">
                        <label>Proje küçük Resmi</label>
                        <input class="form-control" asp-for="SmallImageUrl" />
                    </div>
                    <div class="form-group">
                        <label>Tamamlanma Oranı</label>
                        <input class="form-control" asp-for="CompletionValue" />
                        @Html.ValidationMessageFor(x => x.CompletionValue, null, new { @class = "text-danger" })

                    </div>

                    <div class="form-group">
                        <label>Ücret</label>
                        <input class="form-control" asp-for="Price" />
                    </div>
                    <div class="form-group">
                        <label>DURUM</label>

                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" asp-for="Status" id="pasif" value="false"> Pasif
                                    </label>
                                </div>


                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" asp-for="Status" id="active" value="true"> Aktif
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button class="btn btn-success mt-3" type="submit">GÜNCELLE</button>
                </form>
            </div>
        </div>
    </div>
</div>
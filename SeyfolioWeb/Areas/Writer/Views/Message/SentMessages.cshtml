@model List<WriterMessage>

@{
    ViewData["Title"] = "Giden Mesajlar";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    int counter = 1;
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Alıcı</th>
                            <th>Tarih</th>
                            <th>Detaylar</th>
                            <th>Sil</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var message in Model)
                        {
                            <tr>
                                <td>@(counter++)</td>
                                <td>@message.Subject</td>
                                <td>@message.ReceiverName </td>
                                <td>@message.Date.ToString("dd  MMMM  yyyy - hh:mm")</td>


                                <td> <a asp-area="Writer" asp-controller="Message" asp-action="MessageDetail" asp-route-ID="@message.WriterMessageId" class="btn btn-outline-info"> DETAY  </a>  </td>
                                <td> <a asp-area="Writer" asp-controller="Message" asp-action="DeleteSentMessage" asp-route-ID="@message.WriterMessageId" class="btn btn-outline-danger"> SİL  </a>  </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


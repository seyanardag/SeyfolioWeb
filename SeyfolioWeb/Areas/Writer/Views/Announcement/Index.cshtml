@model List<EntityLayer.Concrete.Announcement>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    string color = "";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>Tarih</th>
                            <th>Durum</th>
                            <th>Detay</th>


                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var announcement in Model)
                        {
                            <tr>
                                <td>@announcement.ID</td>
                                <td>@announcement.Title</td>
                                <td>@announcement.Date.ToString("dd  MMMM  yyyy")</td>

                                @{

                                    string val1 = AnnouncementStatus.Bitti.ToString().ToLower();
                                    string val2 = AnnouncementStatus.DevamEdiyor.ToString().ToLower();

                                    if (@announcement.Status.ToLower().Replace(" ", "") == val1)
                                        color = "bg-success";
                                    if (@announcement.Status.ToLower().Replace(" ", "") == val2)
                                        color = "bg-info";

                                }
                                <td><label class="badge @color">@announcement.Status </label> </td>





                                <td> <a asp-area="Writer" asp-controller="Announcement" asp-action="AnnouncementDetail" asp-route-ID="@announcement.ID" class="btn btn-outline-info" > DETAY  </a>  </td>
                               
                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
